<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.YunoPaymentsSDK" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/neutral_b</item>
        <item name="colorOnPrimary">@color/neutral_w</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/neutral_b</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/neutral_b</item>
        <!-- Customize your theme here. -->
    </style>
    
    <!-- Transparent theme for overlay activities -->
    <style name="Theme.Transparent" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>