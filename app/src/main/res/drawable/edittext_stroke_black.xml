<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado enfocado -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="#000000" />
            <corners android:radius="4dp" />
            <padding
                android:bottom="12dp"
                android:left="12dp"
                android:right="12dp"
                android:top="12dp" />
        </shape>
    </item>
    
    <!-- Estado normal -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#000000" />
            <corners android:radius="4dp" />
            <padding
                android:bottom="12dp"
                android:left="12dp"
                android:right="12dp"
                android:top="12dp" />
        </shape>
    </item>
</selector>
